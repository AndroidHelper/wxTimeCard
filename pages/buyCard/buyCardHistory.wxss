/* pages/buyCard/buyCardHistory.wxss */
.buycardhistory_list_item{
    display: flex;
    padding: 43rpx 57rpx;
    border-top: 1rpx solid #E7E7E7;
}
.buycardhistory_list_item .left{
    flex: 0 0 253rpx;
}
.buycardhistory_list_item .left .icon{
    width: 222rpx;
    height: 145rpx;
    border-radius: 12rpx;
    overflow: hidden;
}
.buycardhistory_list_item .left .icon .icon_img{
    width: 222rpx;
    height: 145rpx;
}
.buycardhistory_list_item .right{
    flex: 1;
    font-size: 24rpx;
}
.buycardhistory_list_item .right .order_info{
    line-height: 50rpx;
}
.buycardhistory_list_item .right .remark{
    display: flex;
}
.buycardhistory_list_item .right .remark .txt{
    flex: 1;
    line-height: 50rpx;
}
.buycardhistory_list_item .right .remark .txt.red{
    color: #F26B6B;
}
.buycardhistory_list_item .right .remark .btn_wrap{
    flex: 1;
}
.no_buy_card_history{
    font-size:32rpx;
    text-align:center;
    color:#999999;
    padding-top:30rpx;
}

.stock_wrap{
    text-align: center;
    padding-top: 250rpx;
}
.stock_wrap .icon{
    width: 354rpx;
    height: 300rpx;
    margin: 0 auto;
    font-size: 0;
}
.stock_wrap .icon .icon_img{
    width: 354rpx;
    height: 300rpx;
}
.stock_wrap .desc{
    font-size:32rpx;
    color:#595959;
    padding-top:100rpx;
}