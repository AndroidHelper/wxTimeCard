/* pages/index/index.wxss */
.slide-image {
    width: 100%;
    height: 443rpx;
}
.line{
    height: 20rpx;
    background: #F0F0F0;
}
.card_wrap{
    padding:0 40rpx;
}
.card_item{
    display: flex;
    margin-bottom: 40rpx;
}
.card_item .left{
    flex: 1;
}
.card_item .right{
    flex: 1;
    display:flex;
    justify-content:flex-end;
}

.card{
    width: 310rpx;
    height: 240rpx;
    font-size: 0;
    box-shadow: 0 10rpx 6rpx 0 rgba(0,0,0,0.05);
    border-radius: 12rpx;
}
.card .card_img .img{
    width: 310rpx;
    height: 160rpx;
    border-radius: 12rpx;
}
.card .card_name{

    font-size: 32rpx;
    line-height: 80rpx;
    text-align: center;
}

.footer .split{
	display: inline-block;
	border-left: 1rpx solid #d8d8d8;
	height: 35rpx;
	margin: 0 20rpx;
	vertical-align: middle;
}
.footer .txt{
	display: inline-block;
	font-size: 28rpx;
	color: #4f5eff;
}
