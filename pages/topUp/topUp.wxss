/* pages/topUp/topUp.wxss */
page{
    background: #F0F0F0;
}
.bg_color{
    background: #FFFFFF;
}

.topup_item_wrap{
    padding: 20rpx 30rpx;
    border-top: 1rpx solid #EAEAEA;
}

.topup_item{
    display: flex;
}
.topup_item .topup_column{
    flex: 1;
}

.column_center{
    display: flex;
    justify-content: center;
}
.column_footer{
    display: flex;
    justify-content: flex-end;
}

.topup_card_wrap{
    position: relative;
    text-align: center;
    width: 215rpx;
    height: 120rpx;
    border: 2rpx solid #D6DAFF;
    border-radius: 8rpx;
}
.topup_card_wrap .no{
    font-size: 32rpx;
    line-height: 32rpx;
    margin:22rpx 0 20rpx 0;
}
.topup_card_wrap .price{
    font-size: 28rpx;
    line-height: 28rpx;
    color: #BEBEBE;
}

.topup_selected{
    border: 2rpx solid #4F5EFF;
    color: #4F5EFF;
}
.topup_selected .check_on{position: absolute;top: 0rpx;right: 0rpx;width: 44rpx;height: 44rpx;
    background: url(data:image/png;base64,);
    background-size: 44rpx 44rpx;
    border:none;
}
.topup_selected .price{
    color: #4F5EFF;
}

.topup_checkbox_wrap{
    padding: 15rpx 30rpx;
}
.topup_checkbox_wrap .topup_checkbox{
    display: inline-block;
    vertical-align: middle;
    width: 24rpx;
    height: 24rpx;
    border-radius: 50%;
    border:1rpx solid #FAA122;
    overflow: hidden;
}
.topup_checkbox_wrap .topup_checkbox.checked{
    background: url(data:image/png;base64,) no-repeat;
    background-size: 24rpx 24rpx;
}

.topup_checkbox_wrap .txt{
    display: inline-block;
    vertical-align: middle;
    margin-left: 6rpx;
    font-size: 24rpx;
}

.topup_btn{
    bottom:0;
    padding:20rpx 30rpx;
}